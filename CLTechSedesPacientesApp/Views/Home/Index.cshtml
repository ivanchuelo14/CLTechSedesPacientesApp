<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header card-header-custom">
            <h2 class="mb-0 textTableCustom">Lista de Sedes</h2>
        </div>
        <div class="card-body p-0">
            <table class="table table-hover table-striped table-responsive-md m-0">
                <thead class="thead-dark">
                    <tr>
                        <th><i class="fa fa-building"></i> Nombre</th>
                        <th><i class="fa fa-code"></i> Codigo Central</th>
                        <th><i class="fa fa-map-marker-alt"></i> Latitud</th>
                        <th><i class="fa fa-map-marker-alt"></i> Longitud</th>
                        <th><i class="fa fa-cogs"></i> Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.SedesViewModel != null && Model.SedesViewModel.Count > 0)
                    {
                        @foreach (var item in Model.SedesViewModel)
                        {
                            <tr>
                                <td>@item.Nombre</td>
                                <td>@item.CodigoCentral</td>
                                <td>@item.Latitud</td>
                                <td>@item.Longitud</td>
                                <td>
                                    <div class="btn-group" role="group" aria-label="Acciones">
                                        <a asp-action="Edit" asp-controller="Sede" asp-route-id="@item.Id" class="btn btn-sm btn-warning" data-toggle="tooltip" title="Editar">
                                            <i class="fa fa-pencil-alt"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="5" class="text-center">
                                No hay sedes activas actualmente en el LIS.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div class="card-footer">
            @if (!(Model.SedesViewModel != null && Model.SedesViewModel.Count > 0))
            {
                <a class="btn btn-primary" asp-action="New" asp-controller="Sede">Agregar Sede</a>
            }
            <a class="btn btn-secondary float-right" asp-action="Index" asp-controller="Home">Regresar</a>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('[data-toggle="tooltip"]').tooltip();
    });
</script>
