@model SedeViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header card-header-custom">
            <h2 class="mb-0 textTableCustom">Agregar Sede</h2>
        </div>
        <div class="card-body">
            <form method="post" asp-action="New" asp-controller="Sede">
                <input type="hidden" asp-for="IdEnterprise" value="1">
                <div class="form-group">
                    <label for="apellido">Nombre:</label>
                    <input type="text" asp-for="Nombre" class="form-control" placeholder="Ingrese el nombre" required>
                    <span asp-validation-for="Nombre"></span>
                </div>
                <div class="form-group">
                    <label for="codigo">Codigo:</label>
                    <input type="text" asp-for="Codigo" class="form-control" placeholder="Ingrese el codigo central" required>
                    <span asp-validation-for="Codigo"></span>
                </div>
                <div class="form-group">
                    <label for="latitud">Latitud:</label>
                    <input type="text" asp-for="Latitud" class="form-control" placeholder="Ingrese la latitud" required>
                    <span asp-validation-for="Latitud"></span>
                </div>
                <div class="form-group">
                    <label for="apellido">Longitud:</label>
                    <input type="text" asp-for="Longitud" class="form-control" placeholder="Ingrese la longitud" required>
                    <span asp-validation-for="Longitud"></span>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a class="btn btn-secondary" asp-action="Index" asp-controller="Home">Regresar</a>
                </div>                
            </form>
        </div>
    </div>
</div>